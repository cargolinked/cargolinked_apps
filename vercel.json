{
  "buildCommand": "pnpm --filter cargolinked-web build",
  "outputDirectory": "apps/web/.next",
  "installCommand": "pnpm install",
  "ignoreCommand": "git diff --quiet HEAD^ HEAD ./apps/web",
  "framework": "nextjs",
  "functions": {
    "apps/web/src/pages/api/**/*.ts": {
      "runtime": "nodejs18.x"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    }
  ]
}
